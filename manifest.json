{
  "manifest_version": 3,
  "name": "TransLang Search",
  "description": "Adds language switch buttons below the search bar and translate selected text.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": { "service_worker": "background.js" },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [ "https://api.mymemory.translated.net/*" ],
  "content_scripts": [
   {
     "matches": ["https://www.google.com/*"],
     "js": ["content-script.js"],
     "css": ["content-script-style.css"]
   }
 ]
}