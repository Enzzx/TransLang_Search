{
  "manifest_version": 3,
  "name": "TransLang Search",
  "description": "Adds language switch buttons below the search bar and translate selected text.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": { "service_worker": "background.js" },
  "permissions": [
    "storage",
    "scripting",
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [ "https://api.mymemory.translated.net/*" ],
  "content_scripts": [
   {
     "matches": ["https://www.google.com/*"],
     "js": [
        "libs/franc-min.umd.js",
        "content-script-search.js"
      ],
     "css": ["content-script-search.css"]
   },
   {
    "matches": ["*://*/*"],
    "js": ["content-script-universal.js"]
   }
 ]
}